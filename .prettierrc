{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 100,
  "semi": false,
  "importOrder": [
    "^next$",
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^@styled-system",
    "^@/components/.+$",
    "^@/features/.+$",
    "^@/.+$",
    "^\\..+$"
  ],
  "importOrderSeparation": true,
  "importOrderParserPlugins": ["typescript", "jsx"]
}
